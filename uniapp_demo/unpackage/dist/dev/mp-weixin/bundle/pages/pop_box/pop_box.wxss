page {
  width: 100%;
  height: 100%;
}
.pop-box {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}
.list-cont {
  flex: 1;
  position: relative;
}
.list-cont .scrool-more {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.list-cont .input-pop {
  margin: 10rpx 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #e0e0e0;
}
.list-cont .sub-title {
  text-align: center;
  font-size: 20rpx;
}
.box-pop {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.box-pop .box-title {
  text-align: center;
  color: #39C9BC;
  font-size: 32rpx;
}
.box-pop .box-sub-title {
  text-align: center;
  color: #666;
  font-size: 24rpx;
}
.box-pop .rate-center {
  margin-left: 30rpx;
}
.footer {
  color: #fff;
  line-height: 100rpx;
  flex: 0 0 100rpx;
  /* 不放大不缩小固定100rpx */
}
.footer .submit-btn {
  background-image: linear-gradient(to right, #39C9BC, #6DE8CC);
  color: white;
}

