page {
  background-color: white;
}
.slot-wrap {
  display: flex;
  flex: 1;
  background-color: #fee9d2;
  height: 60rpx;
  border-radius: 30rpx;
  padding: 0rpx 20rpx;
  align-items: center;
  margin: 0rpx 20rpx;
}
.btn-search {
  height: 50rpx;
  border-radius: 25rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #FA800A;
  padding-left: 20rpx;
  padding-right: 20rpx;
  color: white;
}
.grid-box {
  overflow: hidden;
}
.item-gray {
  background-color: #dcddde;
  color: black;
  float: left;
  height: 60rpx;
  border-radius: 15rpx;
  width: 25%;
  margin: 10rpx;
  line-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
  align-items: center;
}
