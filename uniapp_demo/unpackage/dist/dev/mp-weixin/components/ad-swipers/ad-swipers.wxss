.swiper-wrap {
  overflow: hidden;
  box-sizing: content-box;
}
.swiper-wrap .swiper-con {
  position: relative;
  height: 90%;
  overflow: hidden;
  -webkit-transform: translateY(0);
          transform: translateY(0);
  border-radius: 10rpx;
  box-shadow: 0rpx 5rpx 5rpx #f0f0ff;
  margin: 10rpx;
}
.swiper-wrap .swiper {
  width: 100%;
  height: 100%;
  position: relative;
  text-align: center;
}
.swiper-wrap .swiper .slide-image {
  height: 100%;
}
.swiper-wrap .dots {
  position: absolute;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  bottom: 20rpx;
  display: flex;
}
.swiper-wrap .dots .dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  background-color: #fff;
}
.swiper-wrap .dots .dot.active {
  width: 16rpx;
  border-radius: 8rpx;
  background-color: #FF2C3C;
}
.swiper-wrap .space-image {
  text-align: center;
}

