.order-list {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.order-list .order-detail {
  width: 90%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
}
.order-list .order-detail .detail-top {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.order-list .order-detail .detail-top .order-title {
  font-weight: 400;
  color: black;
  font-size: 36rpx;
}
.order-list .order-detail .detail-top .order-type {
  color: #39C9BC;
  font-size: 30rpx;
}
.order-list .order-detail .order-text {
  width: 100%;
  font-size: 26rpx;
}
.order-list .order-detail .order-care {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.order-list .order-detail .order-name {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.order-list .order-detail .order-name .order-name-text {
  font-size: 26rpx;
}
.order-list .order-detail .order-name .sex-image {
  margin-left: 10rpx;
  margin-right: 10rpx;
  width: 20rpx;
  height: 20rpx;
}
.order-list .order-detail .order-name .order-mobile {
  font-size: 26rpx;
  color: #39C9BC;
}

