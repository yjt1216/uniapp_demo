.loginWrap {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.loginWrap .imgWrap {
  margin-top: 50rpx;
  text-align: center;
}
.loginWrap .sms-login-form {
  margin-top: 50rpx;
  width: 100%;
  padding: 30rpx;
}
.loginWrap .sms-login-form .loginbtn {
  margin: 20rpx;
  margin-top: 60rpx;
  background: #2CA800;
  color: #fff;
  font-size: 30rpx;
}
.loginWrap .sms-login-form .uni-form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #DCDCDC;
  padding: 10rpx 30rpx;
  margin: 20rpx;
}
.loginWrap .sms-login-form .uni-form-item u-input {
  flex: 1;
}
.loginWrap .account-login-form {
  margin-top: 50rpx;
  width: 100%;
  padding: 30rpx;
}
.loginWrap .account-login-form .uni-form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #DCDCDC;
  padding: 10rpx 30rpx;
  margin: 20rpx;
}
.loginWrap .account-login-form .uni-form-item u-input {
  flex: 1;
}
.loginWrap .account-login-form .uni-form-item .forgetText {
  color: #C8C7CC;
}
.loginWrap .account-login-form .loginbtn {
  margin: 20rpx;
  margin-top: 60rpx;
  background: #2CA800;
  color: #fff;
  font-size: 30rpx;
}
.loginWrap .action {
  font-size: 28rpx;
}
.loginWrap .wechatLogin {
  margin-top: 60rpx;
  font-size: 28rpx;
}
.loginWrap .wechatLogin text {
  color: #CCCCCC;
}
.loginWrap .wechatLogin .wechatLoginBtn {
  margin-top: 20rpx;
  border: none;
  width: 90rpx;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.loginWrap .wechatLogin .wechatLoginBtn::after {
  border: none;
}
.loginWrap .wechatLogin .logo-login {
  width: 90rpx;
  height: 90rpx;
}

