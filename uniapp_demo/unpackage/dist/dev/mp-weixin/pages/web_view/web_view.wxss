
.content {
 		position: relative;
}
.share-button {
	  z-index: 999999;
	  position: fixed;
	  color: white;
	  text-align: center;
	  display: flex;
	  justify-content: center;
	  align-items: center;
	  border-radius: 50%;
	  bottom:30rpx;
	  width:60%;
	  height: 72rpx;
	  display: flex;
	  left: 20%;
	  justify-content: center;
}
.share-txt{
		width:200rpx;
		height:72rpx;
		box-shadow:0rpx 4rpx 6rpx 0rpx rgba(18,46,102,0.5);
		border-radius:36rpx;
		line-height: 72rpx;
		text-align: center;
		font-size: 28rpx;
}
.share-txt{
	  margin-right: 40rpx;
}
	

 
